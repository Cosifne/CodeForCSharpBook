<Window x:Class="AsyncWPF1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="质数检测器" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="67*"/>
            <ColumnDefinition Width="450*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="tbNumber" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="0,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="381"/>
        <Button x:Name="btnTest" Content="检测" Grid.Column="1" HorizontalAlignment="Left" Margin="0,135,0,0" VerticalAlignment="Top" Width="75" Click="btnTest_Click"/>
        <Button x:Name="btnCancel" Content="取消检测" Grid.Column="1" HorizontalAlignment="Left" Margin="306,135,0,0" VerticalAlignment="Top" Width="75" Click="btnCancel_Click"/>
        <TextBox x:Name="tbStatus" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="0,200,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="381"/>
        <ProgressBar x:Name="pb" Grid.Column="1" HorizontalAlignment="Left" Height="26" Margin="0,249,0,0" VerticalAlignment="Top" Width="381"/>

    </Grid>
</Window>
